//--PLUGIN NIB--//
@import 'nib/vendor'
vendor-preixes = o ms moz webkit official
@import 'nib/gradients'
//--VARIABLES--//

//--ESTILOS GENERALES--//
body
	background red
	background url(../img/bg.jpg) no-repeat center center fixed
	background-size cover
	font-family 'Gudea', sans-serif
	font-size 14px
a:hover, a:focus
	text-decoration none  
section
	width 90%
	max-width 1000px
	background #fff
	margin 0 auto
	padding 20px
article
	margin 20px 0
h2
	margin 0 0 20px
	font-family 'Viga', sans-serif
header
	background url(../img/header.jpg) no-repeat center center
	background-size cover
	height 320px
	width 100%
	position relative
	h2
		position absolute
		width 100%
		text-align center
		color #fff
		top 150px
		font-size 50px
		small
			display block
			font-family 'Gudea', sans-serif
			color #fff
iframe
	width 100%
	height 300px
#basic
	.btn
		width 100%
table
	tr
		th 
			.jb-manos
				color #b70f26
				font-size 30px
				margin -1px 10px 0
				display inline-block
				vertical-align top
.count
	text-align center
	h2
		font-size 40px
		i
			color #b70f26
		span
			font-size 60px
	ul
		margin 0 0 40px
		padding 0
		list-style none
		width 100%
		li 
			display inline-block
			vertical-align top
			color #ccc
			margin 0 10px
.share_social
	text-align center
@media (max-width: 770px)
	header
		h2
			font-size 30px
	article
		text-align center
	input
		text-align center
	iframe
		margin 0 0 20px
@media (max-width: 660px)
	.count
		text-align center
		h2
			font-size 40px
			span
				display block
				margin 10px 0 0
			i
				display block
				color #b70f26
				margin 5px 0 
@media (max-width: 470px)
	header
		h2
			font-size 25px
//--IMPORTANCIONES--//
